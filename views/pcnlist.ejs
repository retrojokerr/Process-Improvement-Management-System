<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Request Entry Form</title>
    
    <style>
        * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
}

body {
    display: flex;
    background-color: #EDDFDF;
    min-height: 100vh; /* Ensure the body takes the full viewport height */
    flex-direction: column; /* Flex column for navbar and main content */
}

.navbar {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000;
}

.navbar-text {
    display: flex;
    flex-direction: row-reverse;
    justify-content: right;
    font-size: small;
    font-weight: 550;
}

.container {
    display: flex;
    margin-top: 100px; /* Adjust this value to match the height of your navbar */
    flex-grow: 1; /* Allow container to grow and fill the remaining space */
}

.sidebar {
    background-color: #B62741;
    color: white;
    padding: 20px;
    width: 250px;
    height: 100vh; /* Set the height to 100% of the viewport height */
    transition: width 0.3s;
    position: fixed;
    overflow: hidden; /* Hide overflow to make it unscrollable */
}

.sidebar.collapsed {
    width: 50px;
}

.sidebar ul {
    list-style-type: none;
    padding: 0;
    margin: 0; /* Remove default margin */
}

.sidebar ul li {
    margin: 15px 0;
}

.sidebar ul li a {
    color: white;
    text-decoration: none;
    display: block;
    padding: 10px 0; /* Add padding for better spacing */
}

.login-info {
    margin-top: 30px;
    font-size: 14px;
}

.toggle-btn {
    background: none;
    border: none;
    color: white;
    font-size: 20px;
    cursor: pointer;
    position: absolute;
    top: 20px;
    right: 20px;
}

.main-content {
    
    margin-left: 270px;
    flex-grow: 1;
    padding: 20px;
    transition: margin-left 0.3s;
}

.main-content.collapsed {
    
    margin-left: 70px;
}

.main-content h2 {
    margin-bottom: 20px;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
}

th, td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

th {
    background-color: #f2f2f2;
}

.search-bar {
    margin-bottom: 20px;
}

.search-bar input {
    width: 100%;
    max-width: 300px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
}

.pagination button {
    padding: 10px 20px;
    margin: 0 5px;
    border: none;
    background-color: #d40000;
    color: white;
    cursor: pointer;
    border-radius: 4px;
}

.pagination button:disabled {
    background-color: #ccc;
    cursor: not-allowed;
}


        

    </style>
</head>
<body>
    
    <nav class="navbar">
        <div class="container-fluid" style="background-color: white; color: black;">
            <img class="image" src="./bseslogo.png" height="80" width="130"/>
          
            <span class="navbar-text" style="font-size: small; font-weight: 550;">
                Powered by : BSES
            </span>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <div class="sidebar" id="sidebar">
            <button class="toggle-btn" id="toggle-btn">&#9776;</button>
            <div id="sidebar-content">
                <ul>
                    <li><a href="/dashboard" role="button">Dashboard</a></li>
                    <li><a href="#">User Manager</a></li>
                    <li><a href="#">Master Forms</a></li>
                    <li><a href="#">Transaction Forms</a></li>
                    <li><a href="#">MIS</a></li>
                    <li><a href="#">Alert</a></li>
                    <li><a href="/login" role="button">Logout</a></li>
                </ul>
                <div class="login-info">
                    <p>Login User: Power Admin</p>
                    <p>19-May-2024 | 12:15:56</p>
                </div>
            </div>
        </div>
        
        <div class="main-content" id="main-content">
            <h2>Request Entry Details</h2>
        <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Search">
        </div>
        <table id="requestTable">
            <thead>
                <tr>
                    <th>S.No.</th>
                    <th>Request ID</th>
                    <th>Generated by</th>
                    <th>Company</th>
                    <th>Module</th>
                    <th>Last action by</th>
                    <th>Current status</th>
                    <th>Entry Date</th>
                    <th>View</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((row, index) => { %>
                    <tr>
                      <td><%= index + 1 %></td>
                      <td>REQ-<%= row.id %></td>
                      <td><%= row.name %></td>
                      <td><%= row.company %></td>
                      <td><%= row.pri_mod %></td>
                      <td><%= row.last_action_by %></td>
                      <td><%= row.curr_status %></td>
                      <td><%= row.req_dt %></td>
                      <td><a href="/entries/<%= row.id %>" target="_blank">View</a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <div class="pagination">
            <button id="prevBtn" disabled>Prev</button>
            <span id="pageInfo"></span>
            <button id="nextBtn">Next</button>
        </div>
        </div>
    </div>

    <!-- The Modal -->
    <div id="messageModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <p id="modalMessage"></p>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const toggleBtn = document.getElementById("toggle-btn");
            const sidebar = document.getElementById("sidebar");
            const mainContent = document.getElementById("main-content");

            toggleBtn.addEventListener("click", function () {
                sidebar.classList.toggle("collapsed");
                mainContent.classList.toggle("collapsed");

                var x = document.getElementById("sidebar-content");
                if (x.style.display === "none") {
                    x.style.display = "block";
                } else {
                    x.style.display = "none";
                }
            });

            const modal = document.getElementById('messageModal');
            const modalContent = document.getElementById('modalMessage');
            const closeModalBtn = document.getElementsByClassName('close')[0];

            closeModalBtn.onclick = function() {
                modal.style.display = "none";
            };

            window.onclick = function(event) {
                if (event.target === modal) {
                    modal.style.display = "none";
                }
            };

            const form = document.getElementById('myform');

            form.addEventListener('submit', function(event) {
                event.preventDefault(); // Prevent the default form submission

                const formData = new FormData(form);

                fetch('/submit', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const serialid = data.sid;
                        modalContent.innerHTML = `Form submitted successfully!<br><div style="color:red; font-weight: bold;"> Your PCN id is:REQ- ${serialid}</div>`;
                        modal.style.display = "block";
                        form.reset(); // Optionally clear the form after successful submission
                    } else {
                        modalContent.innerHTML = `Error: ${data.message}`;
                        modal.style.display = "block";
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    modalContent.innerHTML = 'Error submitting form';
                    modal.style.display = "block";
                });
            });

            
        });
    </script>
</body>
</html>
